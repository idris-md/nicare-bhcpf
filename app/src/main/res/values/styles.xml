    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonRounded">
        <!--        <item name="roundedCorner">true</item>-->
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BoldTitle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularTitle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="PresetLayoutButton">

        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="PresetLayoutButton_ValueText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingLeft">@dimen/padding_side_title_text</item>
        <item name="android:paddingStart">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingRight">@dimen/padding_side_title_text</item>
    </style>

    <style name="PresetLayoutButton_UnitText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>

    </style>


    <style name="BodyInstruction">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/textColorInstructions</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BodyInstruction2" parent="@style/BodyInstruction">
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="SettingsEditText" parent="Widget.AppCompat.EditText" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">
            @color/primaryLightColor
        </item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:divider">@drawable/keyboard_divider</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:tag">number_button</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <color name="textColorInstructions">@color/black_50</color>

    <color name="grey">#e3e3e3</color>

    <color name="app_button_blue">@color/app_color_sky_blue</color>

    <color name="light_grey_semi_transparent">#80313435</color>

    <color name="textColor">@android:color/black</color>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="clearButton">
        <item name="android:background">@drawable/border_button_clear</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="defaultButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
