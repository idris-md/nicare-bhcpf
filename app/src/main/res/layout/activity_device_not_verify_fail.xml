<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:background="@drawable/bg_logo"

    android:orientation="vertical"
    tools:context=".ui.auth.device.DeviceNotVerifyFailActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:tint="@color/primaryLightColor"
        android:contentDescription="Device not recognize"
        android:src="@drawable/ic_vpn_lock_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:text="Device Not Recognise"
        android:textColor="@color/primaryColor"
        android:fontFamily="@font/roboto_medium"/>
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:text="Your device has not been approved by NiCare to run this App please contact NiCare to Activate your device"
        android:fontFamily="@font/roboto_regular"/>

    <Button
        android:id="@+id/btnTryAgain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_grey"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:text="Try Again"/>


    </LinearLayout>

